// -*- C++ -*-
#ifndef SAUCE_SAUCE_INTERNAL_BINDINGS_H_
#define SAUCE_SAUCE_INTERNAL_BINDINGS_H_

#include <sauce/internal/generated_bindings>

namespace sauce {
namespace internal {
namespace bindings {

template<typename Injector>
class Binding {
  typedef typename Injector::Initializer_ Initializer_;

protected:
  static Initializer_ & initializer(Injector const & injector) {
    return injector.initializer;
  }
};

}
}
}

#endif // ifndef SAUCE_SAUCE_INTERNAL_BINDINGS_H_